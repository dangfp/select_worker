.well.well-sm
  = bootstrap_form_for(@user, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-8') do |f|
    %header
      %h2 Register
    %fieldset
      .form-group
        = f.email_field :email, label: "Email:"
      .form-group
        = f.password_field :password, label: "password:"
      .form-group
        = f.text_field :full_name, label: "full_name:"
      .form-group
        = f.phone_field :phone, label: "phone:"
    %fieldset.actions.control-group.col-sm-offset-2
      .controls
        = f.submit 'submit', class: 'btn btn-default'